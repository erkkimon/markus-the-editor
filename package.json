{
  "name": "markus-the-editor",
  "version": "0.1.1",
  "description": "A local WYSIWYG Markdown editor built with Electron, React, and ProseMirror",
  "main": "dist-electron/main.js",
  "author": {
    "name": "Tom Himanen",
    "email": "tom.himanen@futuhima.ninja"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron": "electron .",
    "dist": "npm run build && electron-builder --publish=never",
    "lint": "eslint src electron --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@types/prosemirror-tables": "^0.8.0",
    "chokidar": "^3.5.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^0.2.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.309.0",
    "markdown-it": "^14.0.0",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-dropcursor": "^1.8.1",
    "prosemirror-gapcursor": "^1.3.2",
    "prosemirror-history": "^1.3.2",
    "prosemirror-inputrules": "^1.3.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-markdown": "^1.12.0",
    "prosemirror-model": "^1.19.4",
    "prosemirror-schema-list": "^1.3.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-tables": "^1.8.5",
    "prosemirror-view": "^1.32.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.22.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^31.7.7",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.1.3"
  },
  "build": {
    "appId": "com.markus.editor",
    "productName": "Markus",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "icon": "resources/icons/icon.png",
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "category": "Utility",
      "icon": "resources/icons",
      "mimeTypes": [
        "text/markdown",
        "text/x-markdown"
      ],
      "desktop": {
        "Name": "Markus",
        "Comment": "WYSIWYG Markdown editor",
        "MimeType": "text/markdown;text/x-markdown;"
      }
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "resources/icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico"
    }
  }
}
